
    
    <form action = "/staff/update-staff/<%= s_id %>" method="post">
        <div class = "form-group">
            <label for="customer_name"> Name</label>
            <input type="text" class = "form-control" id = "s_name" aria-describedby="customerNameHelp"
            value="<%= s_name %>" name="s_name">
        </div>
    
        <div class = "form-group">
            <label for="customer_name">Role</label>
            <input type="text" class = "form-control" id = "role" aria-describedby="customerNameHelp"
            value="<%= role %>" name="role">
        </div>
    
        <div class = "form-group">
            <label for="customer_name">Phone</label>
            <input type="text" class = "form-control" id = "phone" aria-describedby="customerNameHelp"
            value="<%= phone %>" name="phone">
        </div>

        <div class = "form-group">
            <label for="customer_name">Email</label>
            <input type="text" class = "form-control" id = "email" aria-describedby="customerNameHelp"
            value="<%= email %>" name="email">
        </div>

        <div class = "form-group">
            <label for="customer_name">Username</label>
            <input type="text" class = "form-control" id = "username" aria-describedby="customerNameHelp"
            value="<%= username %>" name="username">
        </div>

        <div class = "form-group">
            <label for="customer_name">Password</label>
            <input type="text" class = "form-control" id = "password" aria-describedby="customerNameHelp"
            value="<%= password %>" name="password">
        </div>

        <button type = "submit" class = "btn btn-primary">Update</button>
    </form>