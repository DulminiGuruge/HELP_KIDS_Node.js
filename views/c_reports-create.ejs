<% if(message.length > 0) { %>
    <div class="alert alert-success">
        <%= message %>
    </div>
    <% } %>
    
    <form action = "/c_reports/create-c_reports" method="post">
        <div class = "form-group">
            <label for="customer_name">Customer id</label>
            <input type="text" class = "form-control" id = "c_id" aria-describedby="customerNameHelp"
            placeholder="Enter customer id" name="c_id">
        </div>
    
        <div class = "form-group">
            <label for="customer_name">Donated school items?</label>
            <input type="text" class = "form-control" id = "school_items" aria-describedby="customerNameHelp"
            placeholder="Enter yes or no" name="school_items">
        </div>
    
        <div class = "form-group">
            <label for="customer_name">Amount donated</label>
            <input type="text" class = "form-control" id = "amount_donated" aria-describedby="customerNameHelp"
            placeholder="Enter the amount donated" name="amount_donated">
        </div>
    
        <div class = "form-group">
            <label for="customer_name">Mention any special requests</label>
            <input type="text" class = "form-control" id = "special_requests" aria-describedby="customerNameHelp"
            placeholder="Enter special requests" name="special_requests">
        </div>
    
        <button type = "submit" class = "btn btn-primary">Submit</button>
    </form>